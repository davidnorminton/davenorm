<script>
    /**
     * Animate name on front-page
     * first move the text off screen
     * then detect when user on front page
     * finally bring the text onto the screen
     */
    $(document).ready(function(){
        // remove x overflow from screen due to lastname element being off screen to right
        // which will increase document size 
        $('#front-page').css('overflow-x', 'hidden')
        // move #firstname off screen to left as animation will come from the left 
        $('#firstname').css('left', "-600px");
        // set its position attribute
        $('#firstname').css('position', "absolute");
        // set #lastname attribute
        $('#lastname').css('position', 'absolute');
        // calculate screen width then add width of #lastname div 
        var screensize = $(window).width() + 600;   
        // move the #lastname div off screen
        $('#lastname').css('left', screensize + "px");

        //console.log( $(window).scrollTop() , $(window).height() );

        // detect if user on #front-page
        if ( $(window).scrollTop() < $(window).height() ) { 
            $('#firstname').animate({left : "0px"}, 500);
            $('#lastname').animate({left : "0px"}, 1000);
         }     
        
    });

    /**
     *
     */
      $(window).scroll( function(){
          if ( $(window).scrollTop() > 50 ) {
              $('#lastname').css( {"transition":"2s","font-size":"80px", "position":"absolute" ,"left":"20px" ,
                                   "bottom":"60px","color":"rgba(32, 57, 84, 0.76)" } );
              $('#firstname').css( {"transition":"2s","font-size":"80px", "position":"absolute" ,"left":"20px" ,
                                    "bottom":"120px","color":"rgba(32, 57, 84, 0.76)" } );

          } 
          if ( $(window).scrollTop() < 40 ) {
              $('#lastname').css( {"transition":"2s","font-size":"100px", "position":"absolute" ,"left":"0px" ,
                                   "bottom":"-133px","color":"#fff" } );
              $('#firstname').css( {"transition":"2s","font-size":"100px", "position":"absolute" ,"left":"0px" ,
                                    "bottom":"-35px","color":"#fff" } );

          } 
      });

$(window).scroll( function(){

    /**
     * function to animate skills bar chart
     */
    $('.hideme').each( function(i){

        var bottom_of_object = $(this).offset().top + $(this).outerHeight() + 150;
        var bottom_of_window = $(window).scrollTop() + $(window).height();

        /* If the object is completely visible in the window, fade it in */
        if( bottom_of_window > bottom_of_object ){
            element = this.id;
            switch(element) {
 
                case 'html':
                    width = "600px";
                    break;
                case 'css':
                    width = "500px";
                    break;
                case 'php':
                    width = "500px";
                    break;
                case 'mysql':
                    width = "400px";
                    break;
                case 'linux':
                    width = "400px";
                    break;
                case 'python':
                    width = "400px";
                    break;
                case 'java':
                    width = "400px";
                    break;
            }
    
            $('#'+element).animate({left: '600px', opacity: '0.5', height: '40px', width: width});

        } else {
            // add a position reset function
        }

    }); 

    /**
     * function to animate other skills reveal
     */
    $('.hideme2').each( function(i){
        
        var bottom_of_object = $(this).offset().top + $(this).outerHeight();
        var bottom_of_window = $(window).scrollTop() + $(window).height();

        /* If the object is completely visible in the window, fade it in */
        if( bottom_of_window > bottom_of_object ){
            // get current oject id
            element = this.id;
            // set a dely number based on the id of element
            switch(element) {
 
                case 'javascript-logo':
                    gap = "700";
                    break;
                case 'jquery-logo':
                    gap = "400";
                    break;
                case 'wordpress-logo':
                    gap = "500";
                    break;
                case 'git-logo':
                    gap = "700";
                    break;
                case 'sass-logo':
                    gap = "400";
                    break;
                case 'bootstrap-logo':
                    gap = "600";
                    break;
                case 'angularjs-logo':
                    gap = "300";
                    break;
            }
            // add a delay to element reveal based of figures defined in switch above
            $('#'+element).delay(gap).animate({opacity: 1.0});


        } else {
            //$('#'+element).animate({left: '600px', opacity: '0.5', height: '40px', width: '0px'});
        }

    }); 

    /**
     * animate #interests div onto screen
     */
    $('#interests').each( function(i){
        // get distance of element offset from top plus the outer height plus a little extra
        var bottom_of_object = $(this).offset().top + $(this).outerHeight() + 200 ;
        // get distance window has scrolled from top plus window height
        var bottom_of_window = $(window).scrollTop() + $(window).height();

        /* If the object is completely visible in the window, fade it in */
        if( bottom_of_window > bottom_of_object ){
            // fade in from the left of screen
            $(this).animate({opacity: '1.0' ,width: '690px'});

        } else {
            // no exceptions yet maybe reset to orginal position ?
        }

    }); 


    /**  
     * function to animate speech bubble reveal on certs timeline
     */
    $('.show-bubble').each( function(i){

        // get distance of element offset from top plus the outer height
        var bottom_of_object = $(this).offset().top + $(this).outerHeight();
        // get distance window has scrolled from top plus window height
        var bottom_of_window = $(window).scrollTop() + $(window).height();

        /* If the object is completely visible in the window, fade it in */
        if( bottom_of_window > bottom_of_object ){
    
            $(this).animate({opacity: '1.0'});

        } else {
            // no exceptions yet maybe reset to orginal position ?
        }

    }); 


});
    </script>
<script type="text/javascript">

  /**
   * function to add css to image viewport  
   */
  function viewImage(img) {
      $('#image-viewport').css("display", "block");
      // create a full screen background for image to display on
      $('#image-viewport').css("background", 'rgba(14, 14, 14, 0.69) url('+img+') no-repeat');
      $('#image-viewport').css("background-position","50% 50%");
      $('#image-viewport').css("background-size","50%");
   
    }
  
  // close the image viewer window  
  function closeViewPort() {
      $('#image-viewport').css("display", "none");
   }
  // add a margin to #main div ased on height of screen
  // necessary due to fixed position of #front-page
  $(document).ready(function(){
      var height = $(window).height();
      $('#main').css('margin-top', height); 

  });  

/**
 *  function to reveal and hide nav
 *  ! important use jquery css not animate
 */
$(window).scroll(function() {    
    
    // get scrolled distance
    var scrolled = $(window).scrollTop();
    // get window height
    var _win = $(window).height();
    
    // reveal nav on screen
    if (scrolled > _win + 10) {
        $('#header').css("opacity",  '1.0');
        //console.log("higher", scrolled, _win);   
    }
    // remove nav when back to front page
    if (scrolled < _win -10 ) {
        $('#header').css("opacity",  '0');
        //console.log("lower", scrolled, _win);   
    }

});

</script>

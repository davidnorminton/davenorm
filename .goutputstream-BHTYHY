<script type="text/javascript">
    
    function viewImage(img) {
       $('#image-viewport').css("display", "block");
       $('#image-viewport').css("background", 'rgba(14, 14, 14, 0.69) url('+img+') no-repeat');
       $('#image-viewport').css("background-position","50% 50%");
       $('#image-viewport').css("background-size","50%");
   
    }

    function closeViewPort() {
        $('#image-viewport').css("display", "none");
    }

</script>
